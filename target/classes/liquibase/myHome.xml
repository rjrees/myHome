<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1" author="richie">
        <createTable tableName="bankstatement">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="Account" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="Date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="Type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="Narrative" type="varchar(255)"/>
                <constraints nullable="false"/>
            <column name="Value" type="varchar(255)"/>
                <constraints nullable="false"/>
            <column name="Date" type="TIMESTAMP"/>
                <constraints nullable="false"/>
            <column name="Payments" type="varchar(255)"/>
                <constraints nullable="false"/>
            <column name="Receipts" type="varchar(255)"/>
                <constraints nullable="false"/>
            <column name="Balance" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

